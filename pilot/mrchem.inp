# vim:syntax=sh:

max_depth = 25
order = 7
rel_prec = 1.e-4
screen_thrs = 0
uniform_depth = 0
wavelet = "Interpol"
printlevel = 0
teletype = false

World {
  boxes = [ 1, 1, 1 ]
  initial_scale = -5
  origin = [ -16.0, -16.0, -16.0 ]
}


Pilot {
  nvec = [ 1, 1, 1 ]
  xvec = [ 1 ]
  testFunction = false
  testPoisson = false
  testSCF = true
}

Molecule {
  multiplicity = 1
  nElectrons = 10
  nOrbitals  = 5
  nucParam = -1.0e-5
  basis = "test.bas"
  mo_matrix = "test.mo"
  energies = "test.en"
}

SCF {
  method = DFT
  functional = LDA
  restricted = true
  dumpToFile = false
  useExactLambda = false
  orbitalFree = false
  maxIter = -1
  convThrs = 1.0e-3
  localize = false
  iterPerRotation = 1  ## Iterations between each localization/diagonalization
  clearAccelerator = true
}

Accelerator {
  method = none
  maxHistory = 4
  minHistory = 1
  separateOrbitals = false
  includeFockMatrix = true
}

## The sections below this line should have reasonable defaults,
## and should not be touched or seen by normal users in the future

Operator {
#  doStatistics = false
#  mode = reverse
#  proj_prec = 1.0e-3
#  band_prec = 1.0e-3
}

GreensKernel {
  r_max = -1.0
  r_min = -1.0
  mu = 0.0
  comp_min = 0
  comp_max = 1200
#  exp_prec = 1.0e-3
#  proj_prec = 1.0e-3
}

