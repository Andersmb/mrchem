# vim:syntax=sh:

rel_prec = 1.0e-4                 # Overall relative precision

MRA {
  order = 6                       # Polynomial order
  min_scale = -5                  # Root scale defines world size 2^{-n}
  corner = [ -1, -1, -1 ]         # Translation of corner root box [x,y,z]
  boxes = [ 2, 2, 2 ]             # Number of root boxes [x,y,z]
}

Molecule {
charge = 0
angstrom = true
$coords
H      0.0000 0.0000   -0.3705
H      0.0000 0.0000    0.3705
$end
}

WaveFunction {
  method = DFT                    # Wave function method (HF or DFT)
}

DFT {
  $functionals
  LDA
  $end
  density_cutoff = 1.0e-10
}

ExternalField {
electric_run = false
electric_field = [ 0.0, 0.0, 0.0 ]
}

Properties {
  scf_energy = true               # Compute ground state energy
  dipole_moment = false            # Compute electrostatic dipole moment
  polarizability = true
}

SCF {
  run = true
  orbital_thrs = 1.0e-3           # Convergence threshold in orbital residual
  kain = 3                        # Length of KAIN iterative history
  initial_guess = SAD_DZ
  rotation = 5                    # Diagonalize Fock matrix every n'th iteration
  canonical = false               # Use canonical of localized orbitals
  write_orbitals = false
}

Response {
  orbital_thrs = 1.0e-3           # Convergence threshold in orbital residual
  kain = 3                        # Length of KAIN iterative history
  run = true
  write_orbitals = false          # not yet implemented
  directions = [0,0,1]
}

Polarizability {
  frequency = [0.0]
}
